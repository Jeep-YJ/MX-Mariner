<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
 	<ImageView
 		android:id="@+id/regionicon"
 		android:layout_gravity="left"
 		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:src="@drawable/region02">
 	</ImageView>
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center">
	 	<TextView 
	 		android:id="@+id/regionname"
	 		android:text="REGION_02"
	 		android:textSize="20dip"
	 		android:paddingLeft="10dip"
	 		android:layout_weight="0.5"
	 		android:layout_gravity="center"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content">
	 	</TextView>
	 	<TextView 
	 		android:id="@+id/regiondesc"
	 		android:text="Block Island, RI to the Canadian Border"
	 		android:paddingLeft="10dip"
	 		android:layout_weight="0.5"
	 		android:layout_gravity="center"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content">
	 	</TextView>
	 	<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		 	<TextView 
		 		android:id="@+id/regionsize"
		 		android:text="xxxMB"
		 		android:paddingLeft="10dip"
		 		android:layout_gravity="left"
		 		android:layout_alignParentLeft="true"
		 		android:layout_width="wrap_content"
		 		android:layout_height="wrap_content">
		 	</TextView>>
		 	<TextView 
		 		android:id="@+id/regionstatus"
		 		android:text="not installed"
		 		android:paddingRight="10dip"
		 		android:layout_gravity="right"
		 		android:layout_alignParentRight="true"
		 		android:layout_width="wrap_content"
		 		android:layout_height="wrap_content">
		 	</TextView>
	 	</RelativeLayout>
	 </LinearLayout>
 </LinearLayout>