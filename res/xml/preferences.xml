<PreferenceScreen
	android:key="TopLevelPreferences" xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceScreen
		android:summary="Chart view settings"
		android:title="View"
		android:key="ViewPrefs">
		<CheckBoxPreference
			android:summary="Toggles chart outlines on or off"
			android:title="Chart Outlines"
			android:key="OutlinePref" 
			android:defaultValue="true">
		</CheckBoxPreference>
		<CheckBoxPreference
			android:summary="Toggles zoom buttons on or off"
			android:title="Zoom Buttons"
			android:key="ZoomBtnPref" 
			android:defaultValue="true">
		</CheckBoxPreference>
	</PreferenceScreen>
	<PreferenceScreen
		android:summary="Manage chart regions"
		android:title="Charts"
		android:key="ChartRegions">
		  <ListPreference
		  	android:summary="Select which chart region to use."
		  	android:title="Select Current Chart Region"
		  	android:key="PrefChartLocation">
		  </ListPreference>
		  <Preference
		  	android:summary="Download new NOAA raster chart regions"
		  	android:title="Get new US chart regions"
		  	android:key="ChartDownloader">
		  </Preference>
<!-- 		  <Preference -->
<!--             android:summary="Download new LINZ raster chart regions" -->
<!--             android:title="Get new New Zealand chart regions" -->
<!--             android:key="NzChartDownloader"> -->
<!--           </Preference> 	   -->
	</PreferenceScreen>
	<Preference
        android:summary="Information about MX Mariner and credits"
        android:title="About"
        android:key="About">
    </Preference>
	<Preference
  		android:summary="Warning about using MX Mariner"
  		android:title="Warning"
  		android:key="Warning">
 	</Preference>
 	<Preference
      android:summary="MX Mariner license information"
      android:title="License"
      android:key="License">
    </Preference> 
</PreferenceScreen>